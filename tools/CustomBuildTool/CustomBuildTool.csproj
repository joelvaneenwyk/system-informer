<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <CodePage>65001</CodePage>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
